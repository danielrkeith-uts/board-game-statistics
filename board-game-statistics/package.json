{
	"name": "board-game-statistics",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"proxy": "8080",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"lint": "eslint --fix .",
		"prettier": "prettier . --write",
		"preview": "vite preview",
		"sass": "sass --watch ./src/scss/custom.scss ./src/css/custom.css",
		"prepare": "cd .. && git config core.hooksPath board-game-statistics/.husky && chmod +x board-game-statistics/.husky/*"
	},
	"dependencies": {
		"@types/react-select": "^5.0.0",
		"bootstrap": "^5.3.8",
		"react": "^19.1.1",
		"react-bootstrap": "^2.10.10",
		"react-bootstrap-icons": "^1.11.6",
		"react-dom": "^19.1.1",
		"react-router-dom": "^7.8.2",
		"react-select": "^5.10.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.32.0",
		"@types/react": "^19.1.9",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react": "^4.7.0",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"husky": "^8.0.0",
		"lint-staged": "^15.5.2",
		"prettier": "^3.6.2",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.39.0",
		"vite": "^7.1.0"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"prettier --write",
			"eslint --fix"
		],
		"*.{json,css,md}": [
			"prettier --write"
		]
	}
}
